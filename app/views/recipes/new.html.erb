<div class = 'recipe_container'>
 <% if @recipe.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <h1>Create a new recipe</h1>
  <%= form_with model: @recipe, url: create_recipe_path, method: :post, class: 'form'  do |form|%>
    <div class='form'>
      <div class='form_div'>
        <%= form.text_field :name, placeholder: 'Name' %>
      </div>
      <div class='form_div'>
        <%= form.number_field :preparation_time, placeholder: 'Preparation Time',step: '0.01' %>
      </div>
      <div class='form_div'>
        <%= form.number_field :cooking_time, placeholder: 'Cooking Time', step: '0.01' %>
      </div>
      <div class='form_div'>
        <%= form.text_area :description, placeholder: 'Description' %>
      </div>
      <div class='form_div'>
        <%= form.radio_button :public, true %> Public
        <%= form.radio_button :public, false %> Private
      </div>
    </div>
    <%= form.submit 'Create Recipe', class: 'btn' %>
  <% end %>
</div>
