<div class="shopping-list-container">
    <h1>Shopping List</h1>
    <div class="shopping-list-summary">
        <p>Amount of food items to buy: <%= @combined_foods.count() %></p>
        <p>Total value of food needed: $<%= @total_price %></p>
    </div>
    <div class="shopping-list">
        <table class="table-shopping-list">
            <thead>
                <th>Food</th>
                <th>Quantity</th>
                <th>Price</th>
            </thead>
            <tbody>
              <% @combined_foods.each do |food| %>
                <tr>
                  <td><%= food[:name] %></td>
                  <td><%= food[:required_quantity] %> <%= food [:measurement_unit] %></td>
                  <td>$ <%= food[:price] %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
    </div>
</div>